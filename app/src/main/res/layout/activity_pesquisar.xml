<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E45405"
    android:backgroundTint="#E45405"
    tools:context=".Pesquisar">

    <Button
        android:id="@+id/buttonInicio"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:onClick="calendarioFrom"
        android:text="Button"
        android:textColor="#888585"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonFim"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="42dp"
        android:backgroundTint="@color/white"
        android:onClick="calendarioTo"
        android:text="Button"
        android:textColor="#605656"
        app:layout_constraintStart_toStartOf="@+id/buttonInicio"
        app:layout_constraintTop_toBottomOf="@+id/buttonInicio" />

    <Spinner
        android:id="@+id/spinnerOperacaoPesquisar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFim" />

    <Button
        android:id="@+id/buttonPesquisa"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="62dp"
        android:background="#E45405"
        android:backgroundTint="#E45405"
        android:onClick="executaPesquisa"
        android:text="Pesquisar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerOperacaoPesquisar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Data de inicio"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonInicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Data final"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonInicio" />

</androidx.constraintlayout.widget.ConstraintLayout>